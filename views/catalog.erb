<h2>Catalog </h2>

<div class="container">
	<div class="row">      
    	<% @products.each do |product| %>
			<div class="col">
				<p>
				<a href="/product/<%= product.id %>">Pizza <%= product.title %></a><br>
				<img src="<%= product.path_to_image %>" alt="<%= product.title %>" class="img-thumbnail"><br>
				<%= product.price %> RUB<br>
				</p>
				<br>
				<button type="button" class="btn btn-success" onclick="add_to_cart(<%= product.id %>)">Add to Cart</button>
				<br>
				<br>
			</div>
		<% end %>
   </div>
</div> 	   	